<%= form.error_notification %>

<div class="form-inputs">
  <div class="row">
    <div class="col-md-6">
      <%= form.input :first_name %>
    </div>
    <div class="col-md-6">
      <%= form.input :last_name %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= form.input :email %>
    </div>
    <div class="col-md-6">
      <%= form.input :phone %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= form.input :title %>
    </div>
    <div class="col-md-6">
      <%= form.association :company, collection: Company.order('name ASC') %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <% if @user.photo.file? %>
        <div class="img-thumbnail pull-left" style="margin-right: 1rem;">
          <%= image_tag @user.photo.url(:thumb) %>
        </div>
      <% end %>
      <%= form.input :photo, as: :file %>
    </div>
  </div>
</div>

<br>

<div class="form-actions">
  <%= form.button :submit, class: 'btn btn-primary' %>
</div>