<div class="jumbotron">
  <% if @user.photo.file? %>
    <div class="profile-thumbnail img-thumbnail img-square pull-left">
      <%= image_tag @user.photo.url(:thumb), size: 80 %>
    </div>
  <% end %>

  <h2 class="profile-username"><%= @user.name %></h2>

  <p class="profile-infos"><%= @user.title %> @<%= @user.company.present? ? @user.company.name : "N/A" %> — <%= mail_to @user.email %> — <%= tel_to @user.phone %></p>
</div>

<% if current_user.role == "admin" %>

<h3>Réservations</h3>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Horaire</th>
      <th>Salle</th>
    </tr>
  </thead>
  <tbody>
    <% @user.reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.date %></td>
        <td><%= reservation.time %></td>
        <td><%= link_to reservation.meeting_room.name, reservation.meeting_room %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>