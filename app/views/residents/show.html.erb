<% if @user.photo.file? %>
  <%= image_tag @user.photo.url(:thumb), size: 80, class: 'img-thumbnail img-circle pull-left', style: 'margin-right: 15px; margin-top: 15px;' %>
<% end %>

<h2><%= @user.name %></h2>

<p><%= @user.title %></p>
<p><%= @user.company.present? ? @user.company.name : "N/A" %></p>

