<h2>Liste des résidents</h2>

<table class="table datatable">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Prénom</th>
      <th>Email</th>
      <th>Téléphone</th>
      <th>Entreprise</th>
      <th data-orderable="false">Droits</th>
      <th data-orderable="false"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.last_name %></td>
        <td><%= user.first_name %></td>
        <td><%= mail_to user.email %></td>
        <td><%= tel_to user.phone %></td>
        <td><%= user.company.present? ? user.company.name : "N/A" %></td>
        <td>
          <% if user.role == "user" %>
            <%= link_to 'Rendre Admin', make_admin_path(user), method: :patch, class: 'btn btn-default btn-xs' %>
          <% else %>
            <%= link_to 'Retirer Admin', make_user_path(user), method: :patch, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </td>
        <td><%= link_to 'Supprimer', resident_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>