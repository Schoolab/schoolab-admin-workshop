<div class="panel col-xs-12">
  <div class="panel-heading panel-heading--bordered">
    <h2>
      <%= title "seasonmes" %>
      <% if can? :manage, Season %>
        <div class="pull-right">
          <%= link_to 'Nouveau seasonme', new_program_season_path, class: 'btn btn-primary' %>
        </div>
      <% end %>
    </h2>
    <% if can? :manage, Project %>
      <ul class="inline-list mt">
        <li><strong>Tous</strong></li>
        <li><%= link_to "Corbeille", deleted_seasons_path %></li>
      </ul>
    <% end %>
  </div>

  <div class="panel-body row">
    <% @seasons.each do |season| %>

      <div class="col-xs-12 col-md-6">
        <%= render "layouts/list-item", item: season %>
      </div>

    <% end %>

  </div>

</div>
