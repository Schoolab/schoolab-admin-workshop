<div class="modal fade" id="newMemberModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <%= simple_form_for :role, url: project_members_path(@project) do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h2 class="modal-title" id="myModalLabel">Ajouter un membre</h2>
        </div>
        <div class="modal-body">

          <div class="row form-row">
            <div class="form-group col-md-6 has-feedback has-feedback-left">
              <%= f.label :name, "Membre", class: "sr-only" %>
              <%= f.input :user_id, collection: @other_users,  label: false, prompt: "Membre" %>
              <i class="form-control-feedback material-icons">person</i>
            </div>
            <div class="form-group col-md-6 has-feedback has-feedback-left">
              <%= f.label :name, "Rôle", class: "sr-only" %>
              <%= f.input :name, collection: Role.collection_for_select,  label: false, prompt: "Rôle" %>
              <i class="form-control-feedback material-icons">whatshot</i>
            </div>
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Annuler, ne pas ajouter</button>
          <%= f.submit "Ajouter", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
