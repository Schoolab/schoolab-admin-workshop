<h2 class="page__title">
  <% if can? :manage, Project %>
    <%= title "Projets" %>
    <div class="pull-right">
      <% if @program.presence %>
        <%= link_to 'Nouvelle saison', new_program_season_path(@program), class: 'btn btn-default' %>
      <% end %>
      <%= link_to 'Nouveau projet', new_project_path, class: 'btn btn-info' %>
    </div>
  <% else %>
    <%= title "Mes projets" %>
  <% end %>
</h2>
