<div class="panel col-xs-12">
  <div class="panel-heading panel-heading--bordered">
    <h2>
      <% if can? :manage, Project %>
        <%= title "Projets" %>
        <div class="pull-right">
          <%= link_to 'Nouveau projet', new_project_path, class: 'btn btn-primary' %>
        </div>
      <% else %>
        <%= title "Mes projets" %>
      <% end %>
    </h2>
    <ul class="inline-list mt">
      <li><strong>Tous</strong></li>
      <% if can? :manage, Project %>
        <li><%= link_to "Corbeille", deleted_projects_path %></li>
      <% end %>
    </ul>
  </div>

  <div class="panel-body row">
    <% @projects.each do |project| %>
      <div class="col-xs-12 col-md-4">
        <%= render 'projects/project-item', item: project %>
      </div>
    <% end %>
  </div>

</div>
