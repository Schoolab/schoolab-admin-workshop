<%= simple_form_for(@meeting_room) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-md-6">
        <%= f.input :name %>
      </div>
      <div class="col-md-6">
        <%= f.input :colour %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.association :floor %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
