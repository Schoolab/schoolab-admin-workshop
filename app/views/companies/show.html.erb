<div class="row">
  <div class="col-xs-12 col-md-4">
    <div class="panel txt-c">
      <div class="panel-heading">
        <% if @company.image.file? %>
          <div class="thumbnail company-thumb mb" style="width:96px;height:96px;">
            <%= image_tag @company.image.url(:medium), size: 96 %>
          </div>
        <% else %>
          <div class="thumbnail no-thumb company-thumb mb" style="width:96px;height:96px;"></div>
        <% end %>

        <h2><%= @company.name %></h2>
      </div>
      <div class="panel-body">
        <ul class="list-infos">
          <li class="muted">
            <%= link_to @company.floor.name, floor_path(@company.floor) %>
          </li>
          <li class="muted"><%= @company.employees.count %> <%= 'employé'.pluralize(@company.employees.count) %></li>
        </ul>

        <h4><%= @company.name %> c'est quoi ?</h4>
        <% if @company.description? %>
          <p><%= @company.description %></p>
        <% else %>
          <p class="muted">Pas de description...</p>
        <% end %>

        <ul class="simple-list">
          <% if @company.email? %>
            <li class="list-icon list-icon-email"><%= mail_to @company.email %></li>
          <% end %>
          <% if @company.phone? %>
            <li class="list-icon list-icon-phone"><%= tel_to @company.phone %></li>
          <% end %>
        </ul>

        <% if current_user.role == "admin" %>
          <%= link_to edit_company_path(@company), class: 'btn btn-default btn-icon' do %>
            <i class="material-icons">settings</i><span>Paramètres</span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-md-8">

    <div class="panel">
      <div class="panel-heading">
        <h2>Liste des employés</h2>
      </div>
      <div class="panel-body">
        <% if @company.employees.each do |employee| %>

          <%= render "layouts/list-item", type: employee %>

        <% end.empty? %>

          <p class="muted">Il n'y a personne dans cette entreprise...</p>

        <% end %>
      </div>
    </div>
  </div>
</div>
