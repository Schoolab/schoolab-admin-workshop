<div class="panel col-xs-12">
  <div class="panel-heading panel-heading--bordered">
    <h2>
      <%= title "Entreprises" %>
      <% if can? :manage, Company %>
        <div class="pull-right">
          <%= link_to 'Nouvelle entreprise', new_company_path, class: 'btn btn-primary' %>
        </div>
      <% end %>
    </h2>
    <% if can? :manage, Company %>
      <ul class="inline-list mt">
        <li><strong>Tous</strong></li>
        <li><%= link_to "Corbeille", deleted_companies_path %></li>
      </ul>
    <% end %>
  </div>

  <div class="panel-body">

    <% @companies.each do |company| %>

      <div class="col-xs-12 col-md-6">
        <%= render "layouts/list-item", item: company %>
      </div>

    <% end %>


  </div>

</div>
