<%= render "projects/page-title" %>

<div class="panel col-xs-12" id="list-items">

  <%= render "projects/tablist" %>

  <div class="panel-body row">
    <ul class="list list-items">

      <% if @program.projects.each do |project| %>
        <li class="col-xs-12 col-md-4">
          <%= render 'projects/project-item', item: project %>
        </li>
      <% end.empty? %>
        <li class="col-xs-12">
          <p class="muted">Il n'y a pas de projets dans ce programme.</p>
        </li>
      <% end %>

    </ul>
  </div>

</div>
